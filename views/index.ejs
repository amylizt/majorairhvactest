  <section id="contact" class="py-20 bg-neutral-900 text-white px-4">
    <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-4xl font-black mb-6 uppercase italic text-major-red">Get a Free Estimate</h2>
        <div class="space-y-4 font-bold text-xl">
          <p>üìç Salisbury, MD</p>
          <p class="text-major-red">üìû (443) 596-2567</p>
        </div>
      </div>

      <div id="form-container">
        <% if (typeof success !== 'undefined' && success === 'true') { %>
        <div class="bg-white p-8 rounded shadow-2xl text-black text-center border-t-8 border-green-500 animate-fade-in">
          <div class="text-green-500 text-6xl mb-4">‚úì</div>
          <h3 class="text-2xl font-bold uppercase italic mb-2">Message Sent!</h3>
          <p class="text-gray-600 mb-6">Thank you. Major Air has received your request and will contact you shortly.</p>
          <a href="/#contact" class="text-sm font-bold text-major-red hover:underline uppercase tracking-widest">
            Send another message
          </a>
        </div>
        <% } else { %>
        <form action="/majorairhvactest/contact" method="POST" id="contactForm"
          class="bg-white p-6 rounded shadow-2xl text-black space-y-4">
          <input type="text" name="customerName" placeholder="Full Name"
            class="w-full p-3 bg-gray-100 rounded focus:ring-2 focus:ring-major-red" required>

          <div class="flex flex-col space-y-2">
            <label class="font-bold text-sm text-gray-700 uppercase">Preferred Contact Method:</label>
            <div class="flex gap-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="preferredMethod" value="email" checked onclick="toggleRequired('email')"
                  class="text-major-red focus:ring-major-red"> Email
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="preferredMethod" value="phone" onclick="toggleRequired('phone')"
                  class="text-major-red focus:ring-major-red"> Phone
              </label>
            </div>
          </div>

          <div class="space-y-4">
            <input type="email" id="emailField" name="email" placeholder="Email Address"
              class="w-full p-3 bg-gray-100 rounded focus:ring-2 focus:ring-major-red" required>

            <input type="tel" id="phoneField" name="phone" placeholder="Phone Number (e.g. 862-239-5050)"
              pattern="^(\+?1-?)?(\([2-9][0-8][0-9]\)|[2-9][0-8][0-9])[-. ]?([2-9][0-9]{2})[-. ]?([0-9]{4})$"
              title="Please enter a valid US phone number (e.g., 555-555-5555)"
              class="w-full p-3 bg-gray-100 rounded focus:ring-2 focus:ring-major-red">
          </div>

          <textarea name="message" placeholder="How can we help?" class="w-full p-3 bg-gray-100 rounded"
            rows="3"></textarea>

          <button
            class="w-full bg-major-red hover:bg-red-800 text-white font-black py-4 uppercase tracking-widest rounded shadow-lg transition">
            Send Message
          </button>
        </form>

        <script>
          function toggleRequired(method) {
            const emailField = document.getElementById('emailField');
            const phoneField = document.getElementById('phoneField');

            if (method === 'email') {
              emailField.required = true;
              phoneField.required = false;
            } else {
              emailField.required = false;
              phoneField.required = true;
            }
          }
        </script>
        <% } %>
      </div>
    </div>
  </section>

  <div class="fixed bottom-0 left-0 w-full flex h-16 z-50 md:hidden shadow-lg">
    <a href="tel:4435962567"
      class="w-1/2 bg-major-red text-white flex items-center justify-center font-black uppercase border-r border-white/20">
