            class="w-full bg-major-red hover:bg-red-800 text-white font-black py-4 uppercase tracking-widest rounded shadow-lg transition">
            Send Message
          </button>
        </form>

        <script>
          function toggleRequired(method) {
            const emailField = document.getElementById('emailField');
            const phoneField = document.getElementById('phoneField');

            if (method === 'email') {
              emailField.required = true;
              phoneField.required = false;
            } else {
              emailField.required = false;
              phoneField.required = true;
            }
          }
        </script>
